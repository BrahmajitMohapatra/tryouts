#!/usr/bin/ruby

# = Drill
# 
# This drill is used to test Tryouts itself. 
# It is otherwise uninteresting!
#

require 'drydock'

module DrillCLI 
  extend Drydock
  
  global :V, :verbose do |v|
    @verbose = v
  end
  
  default :sergeant
  
  option :e, :echo, "Echo the arguments"
  command :sergeant do |obj|
    if obj.option.echo
      puts obj.argv
    else
      players = ['d-bam', 'alberta', 'birds', 'condor man']
      coaches = ['greg', 'rupaul', 'telly', 'prince kinko']
      puts '#'*54
      puts "%9s %44s" % ["Date:", "2009-02-16"]
      puts '='*54
      puts "%9s %44s" % ["Players:", players.join(', ')]
      puts '-'*54
      puts "%9s %44s" % ["Coaches:", coaches.join('|')]
    end
  end
  
end